<h1>Show users </h1>

<div>
 <div><img src=<%= @user.photo %>></div>
 <div>
  <h3><%= @user.name %></h3>
  <div>Number of post: <%= @user.postsCounter %></div>
  <p><%= @user.bio %></p>
 </div>
 <div>
   <% counter = 0%>
   <% @posts.each do |item|%>
      <div>
         <p>Post #<%= counter += 1 %></p>
         <p>lorem ipsum dolor sit amet, consectetur adipiscing elit. <%= item.text %></p>
         <p>Comments: <%= item.commentsCounter%> Likes: <%= item.likesCounter %>
      </div>
   <%end%>
 </div>
 <%= link_to 'See all posts', user_posts_path(@user)  unless can_be_show?(@posts) %>
</div> 
