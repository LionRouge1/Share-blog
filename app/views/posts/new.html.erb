<div class="container">
  <h1> Add a new post <h2>
  <%= bootstrap_form_with(model: @post, url: user_posts_path(@user)) do |f| %>
    <%= f.text_field :title, class: "form-control", placeholder: 'title'%>
    <%= f.text_area :text, class: "form-control", placeholder: 'text' %>
    <%= f.submit "submit" %>
  <% end %>
</div>